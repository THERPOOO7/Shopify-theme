<script>
  function isMobile() {
    return window.innerWidth <= 768;
  }

$(document).ready(function () {
  if (isMobile()) {
      $('.slider').slick({
        slidesToShow: 1,
        slidesToScroll: 1,
        dots: true,
        centerMode: true,
        arrows: false,
      });
    }
  });
</script>