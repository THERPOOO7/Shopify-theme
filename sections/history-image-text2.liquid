<div class="history-image-text2">
  <div class="history-text2 ">
    <h2>
      {{ section.settings.history_text_caption1 }}
    </h2>
    <h3>
      {{ section.settings.history_Founder1 }}
    </h3>
    <h5>
      {{ section.settings.history_founder_designetion1 }}
    </h5>
    <div class="history_text2">
      {{ section.settings.history_text2 }}
    </div>
     <h2>
      {{ section.settings.history_text_caption2 }}    
    </h2>
    <h3>
      {{ section.settings.history_founder2 }}
    </h3>
    <h5>
      {{ section.settings.history_founder_designetion2 }}
