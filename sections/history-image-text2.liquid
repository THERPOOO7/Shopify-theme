    {
      "name": "History text and image 2",
      "category": "Custom"      
    }
  ]
}
{% endschema %}

{% stylesheet %}

  .history-image-text2{
    display: flex;
    margin-top: 4rem;
    /* padding: 0 2rem; */
    padding: 0 6rem;
  }  
  .history-text2{
    font-size: 20px;
    max-width: 100%;
    width: 100%;
    padding: 0 6rem 3rem 0;
  }
  .history-image2{
    max-width: 100%;
    width: 100%;
  }
  .history-text2 h2{
    font-weight: 600;
    color: #D6652D;
  }
  .history-text2 h3{
    font-weight: 600;
    margin: 0 0 6px;
  }
  .history-text2 h5{
    margin: 0 0 6px;
  }
  .history-image2 h2{
    font-weight: 600;
    color: #D6652D;
  }
  .history-image2 h3{
    font-weight: 600;
  }

    @media screen and (max-width: 768px){
    .history-image-text2{
      padding: 0 2rem;
    } 
    .history-text2 {
      font-size: 18px;
      padding: 0 0 3rem ;

    }
  }
  
{% endstylesheet %}

