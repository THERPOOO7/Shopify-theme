{% schema %}
  {
    "name": "History image with text 2",
    "settings": [
      {
        "type": "text",
        "id": "history_text_caption1",
        "label":"Caption 1"
      },
      {
        "type": "text",
        "id": "history_Founder1",
        "label":"Founder Name"
      },
      {
        "type": "text",
        "id": "history_founder_designetion1",
        "label":"Founder Designetion"
      },
      {
        "type": "richtext",
        "id": "history_text2",
        "label":"History 2"
      },
      {
        "type": "image_picker",
        "id": "history_image1",
        "label": "History Image 1"
      },
      {
        "type": "image_picker",
        "id": "history_image2",
        "label": "History Image 2"
      },
      {
        "type": "text",
        "id": "history_text_caption2",
        "label":"History caption"
      },
      {
        "type": "text",
        "id": "history_founder2",
        "label":"Founder Name"
      },
      {
        "type": "text",
        "id": "history_founder_designetion2",
        "label":"Founder designetion"
