      "label": "Image1"
    },
    {
      "type": "text",
      "id": "title1",
      "label": "Title1",
      "default": "Sample Title"
    },
    {
      "type": "textarea",
      "id": "description1",
      "label": "Description1",
      "default": "This is a sample description."
    },
    {
      "type": "image_picker",
      "id": "image2",
      "label": "Image2"
    },
    {
      "type": "text",
      "id": "title2",
      "label": "Title2",
      "default": "Sample Title"
    },
    {
      "type": "textarea",
      "id": "description2",
      "label": "Description2",
      "default": "This is a sample description."
    },
    {
      "type": "image_picker",
      "id": "image3",
      "label": "Image3"
    },
    {
      "type": "text",
      "id": "title3",
      "label": "Title3",
      "default": "Sample Title"
    },
    {
      "type": "textarea",
      "id": "description3",
      "label": "Description3",
      "default": "This is a sample description."
    }
  ],
  "presets": [
    {
      "name": "Badges",
      "category": "Custom"
       
    }
  ]
}
{% endschema %}

{% stylesheet %}

.badges-main-section{
    display: flex;
    justify-content: space-evenly;
    margin: 80px 40px;
}
  .badges-main-section .custom-block .badges-img{
    display: flex;
    justify-content: center;
  }
  .badges-main-section .custom-block .badges-text{
    text-align: center;
  }

    .badges-main-section .custom-block .badges-text .custom-block-description{
      margin-top: 0;
    }
    .badges-main-section .custom-block .badges-text .custom-block-title{
      margin-bottom: 0;
    }
  
@media screen and (max-width: 568px) {
  .badges-main-section{
    display: grid;
    margin: 80px 0;
    gap: 6rem;
  }
}

{% endstylesheet %}

