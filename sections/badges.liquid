      <img src="{{ section.settings.image1 | img_url }}" alt="{{ section.settings.titel1 }}" class="custom-block-image">
    </div>
    <div class="badges-text">
      <h2 class="custom-block-title">{{ section.settings.title1 }}</h2>
      <p class="custom-block-description">{{ section.settings.description1 }}</p>
    </div>
  </div>
  <div class="custom-block">
    <div class="badges-img">
      <img src="{{ section.settings.image2 | img_url }}" alt="{{ section.settings.titel2 }}" class="custom-block-image">
    </div>
    <div class="badges-text">
      <h2 class="custom-block-title">{{ section.settings.title2 }}</h2>
      <p class="custom-block-description">{{ section.settings.description2 }}</p>
    </div>
  </div>
  <div class="custom-block">
    <div class="badges-img">
      <img src="{{ section.settings.image3 | img_url }}" alt="{{ section.settings.titel3 }}" class="custom-block-image">
    </div>
    <div class="badges-text">
      <h2 class="custom-block-title">{{ section.settings.title3 }}</h2>
      <p class="custom-block-description">{{ section.settings.description3 }}</p>
    </div>
  </div>
</div>



