<section class="customer-reviews-section">
<div class="background-image" style="background-color: {{ section.settings.background_color }};">
  {% if section.settings.reviews_bg %}
    <img src="{{ section.settings.reviews_bg | img_url: 'large' }}" alt="{{ section.settings.reviews_bg }}" />
  {% endif %}
</div>
  <div class="">
    <div class="review-header">
      <h2>{{ section.settings.reviews_heading }}</h2>
      <p>{{ section.settings.reviews_text }}</p>
    </div>
     
    <div class="review-cards-slider">
      {% for block in section.blocks %}
      <div class="review-card  ">
        <img src="{{ block.settings.review_image | img_url: 'medium' }}" alt="{{ block.settings.review_heading }}" class="review-img">
        <div class="stars-rating">
          <img src="{{ block.settings.star_rating | img_url: 'medium' }}" alt="{{ block.settings.review_heading }}">
        </div>
        <h3>{{ block.settings.review_heading }}</h3>
        <p>{{ block.settings.review_text }}</p>
        <p>{{ block.settings.additional_paragraph }}</p>
      </div>
      {% endfor %}
    </div>
    <div class="slider-arrows">
      <button class="slider-prev"><i class="fa-solid fa-arrow-left-long"></i></button>
      <button class="slider-next"><i class="fa-solid fa-arrow-right-long"></i></button>
    </div>
  </div>
</section>


{% schema %}
  {
  "name": "Customer Reviews",
  "settings": [
    {
      "type": "text",
      "label": "Reviews Heading",
      "id": "reviews_heading",
      "default": "Customer Reviews"
    },
    {
      "type": "textarea",
      "label": "Reviews Text",
      "id": "reviews_text",
      "default": "Read what our customers have to say about us."
    },
    {
      "type": "image_picker",
      "label": "Reviews background image",
      "id": "reviews_bg",
      "info": "Leave this blank to use background color instead."
    },
    {
      "type": "color",
      "label": "Background Color",
      "id": "background_color",
      "default": "#DA723B"
    }
  ],
  "blocks": [
    {
      "type": "review-card",
      "name": "Review Card",
      "settings": [
        {
          "type": "image_picker",
          "label": "Review Image",
          "id": "review_image"
        },
        {
         "type": "image_picker",
          "label": "Star Rating",
          "id": "star_rating"
        },
        {
          "type": "text",
          "label": "Review Heading",
          "id": "review_heading",
          "default": "Great Details!"
        },
        {
          "type": "text",
          "label": "Review Text",
          "id": "review_text",
          "default": "HEMA HX-2"
        },
        {
          "type": "textarea",
          "label": "Additional Paragraph",
          "id": "additional_paragraph",
          "default": "I'm vary happywith this edition of the maps. Vary good detail."
        }
      ]
    }
  ],
     "presets": [
    {
      "name": "review-cards",
      "category": "Custom"      
    }
  ]
}
{% endschema %}

{% stylesheet %}

