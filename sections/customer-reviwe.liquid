  flex-wrap: wrap;
  justify-content: space-between;
  align-items: flex-start;
  margin-top: 8rem;
  padding: 5rem 9rem;
}

.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.background-image img {
  object-fit: cover; /* Make the image cover the entire container */
  width: 100%;
  height: 100%;
  display: block; /* Remove any extra space below the image */
