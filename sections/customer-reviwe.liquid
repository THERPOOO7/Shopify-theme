.slider-prev,
.slider-next {
  background: none;
  border: none;
  font-size: 30px;
  color: #fff;
  cursor: pointer;
  padding: 0.5rem 3rem;
}

  @media (max-width: 1200px) {
  /* .customer-reviews-section {
