  .review-card {
    width: calc(33.33% - 20px);
  }
}

@media (max-width: 992px) {
  .customer-reviews-section {
    padding: 3rem 4rem;
  }

  .review-card {
    width: calc(50% - 20px);
  }
}

@media (max-width: 768px) {
